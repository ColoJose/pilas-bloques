
<div class='pilas-blockly-botones'>
  <button class='btn btn-warning' {{action 'reiniciar'}}>Reiniciar</button>
  <button class='btn btn-success' {{action 'ejecutar'}}>Ejecutar</button>
  <button class='btn btn-warning' {{action "ver_codigo"}}>Ver Codigo</button>
</div>

<xml id="toolbox" style="display: none">
    <category name="Control">
    </category>
</xml>


<div id="contenedor-blockly" style="height: 300px; width: 500px;"> </div>

<script>

window.anterior_altura = 0;


function redimensionar() {
  var panel = document.getElementById('panel-derecho');
  var altura = panel.getClientRects()[0].height;

  if (window.anterior_altura != altura) {
    var e = document.getElementById('contenedor-blockly');
    e.style.height = (altura - 50) + 'px';
    window.anterior_altura = altura;
    Blockly.fireUiEvent(window, 'resize');
  }
}

function forzar_redimensionado() {
  window.anterior_altura += 1;
  redimensionar();
}

window.onresize = redimensionar;

</script>
