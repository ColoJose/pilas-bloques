<div class='contenedor-editor' id='contenedor-editor'>

  <div class='panel-pilas' id='panel-pilas'>
    {{pilas-canvas actividad=model.actividad}}

    <div class='panel-ayuda'>
      <h4>{{model.actividad.nombre}}</h4>
      <p>{{model.actividad.enunciado}}</p>

      {{#if model.actividad.actividad.consignaInicial}}
        <div class="tip-block">
          <p><em>¿Sabías que?</em></p>
          <p>
            {{model.actividad.actividad.consignaInicial}}
          </p>
        </div>
      {{/if}}
    </div>

  </div>



  <div class='panel-derecho' id='panel-derecho'>
    {{pilas-blockly actividad=model.actividad reiniciar='reiniciar'}}
  </div>

</div>
