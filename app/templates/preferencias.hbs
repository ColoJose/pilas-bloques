<h1>Preferencias</h1>


{{#if edicion}}
  <p>
    <button class='btn btn-success' {{action 'guardar'}}>Guardar</button>
  </p>

  <p>
    <label>Nombre: {{input type="text" value=model.nombre}} </label>
  </p>

{{else}}
  <button class='btn btn-info'{{action 'editar'}}>Editar</button>

  <p>
    Nombre: {{model.nombre}}
  </p>

{{/if}}
